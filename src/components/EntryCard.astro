---
const { entry } = Astro.props;
---

<article class="card">
  <img src={entry.data.cover} alt={entry.data.title} />

  <div class="card-body">
    <h2>{entry.data.title}</h2>
    <p class="date">
      {new Date(entry.data.date).toLocaleDateString('es-ES', {
        year: 'numeric',
        month: 'long',
      })}
    </p>


    <slot />

    {entry.data.video && (
      <iframe
        src={entry.data.video}
        loading="lazy"
        allowfullscreen
      ></iframe>
    )}
  </div>
</article>

<style>
.card {
  background: var(--white);
  border: 2px solid var(--border);
  border-radius: 12px;
  box-shadow: 3px 3px 0 var(--lilac);
  overflow: hidden;
}

.card img {
  width: 100%;
  display: block;
}

.card-body {
  padding: 1rem;
}

.date {
  font-size: 0.8rem;
  opacity: 0.6;
}

iframe {
  width: 100%;
  height: 240px;
  border-radius: 8px;
  border: none;
  margin-top: 0.8rem;
}
</style>
